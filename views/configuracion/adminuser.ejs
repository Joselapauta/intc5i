<%- include('../partials/head') %>


    <body>
        <!-- Page content -->
        <%- include('../partials/nav') %>

            <main>
                <!-- Page header -->
                <section class="py-lg-6 py-4 bg-primary">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                                <div>
                                    <h1 class="text-white display-4 mb-0">Administrador de Usuarios</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- Content -->


                <section class="pt-5 pb-5">
                    <div class="container">
                        <div class="row mt-0 mt-md-4">
                            <div class="col-lg-3 col-md-4 col-12">
                                <!-- Side navbar -->
                                <%- include('menu') %>
                            </div>
                            <!-- Content -->
                            <div class="col-lg-9 col-md-8 col-12">
                                <!-- Card -->
                                <div class="card">
                                    <!-- Card header -->
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <div>
                                            <!-- Notification -->
                                            <h3 class="mb-0">Administrador de Usuarios</h3>
                                            <p class="mb-0">
                                                Agrega, Edita, o Elminina a los usuarios de la plataforma.
                                            </p>
                                        </div>

                                    </div>


                                    <div class="container mt-5">
                                        <h2>Información del Usuario</h2>
                                        <form id="userForm" >
                                            

                                            <div class="row">
                                                <div class="col-md-6 ">
                                                    <div class="form-group">
                                                        <input type="hidden" name="id" id="userId" value="">
                                                        <label for="firstName">Nombre</label>
                                                        <input type="text" class="form-control" id="firstName" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="email">Correo Electrónico</label>
                                                        <input type="email" class="form-control" id="email" required>
                                                    </div>
                                                    <div class="form-group mb-3">
                                                        <label for="role">Rol</label>
                                                        <select class="form-control" id="role">
                                                            <option value="">Seleccione un rol</option>
                                                            <option value="3">Analista</option>
                                                            <option value="2">Coordinador</option>
                                                            <option value="1">Admin</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group mb-3">
                                                        <label for="password">Contraseña</label>
                                                        <input type="password" class="form-control" id="password">
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="lastName">Apellido</label>
                                                        <input type="text" class="form-control" id="lastName" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="rank">Rango</label>
                                                        <select class="form-control" id="rank">
                                                            <option value="">Seleccione un rango</option>
                                                            <option value="Junior">Junior</option>
                                                            <option value="Senior">Senior</option>
                                                            <option value="Lead">Lead</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group mb-3">
                                                        <label for="status">Estado</label>
                                                        <select class="form-control" id="status">
                                                            <option value="">Seleccione un estado</option>
                                                            <option value="activo">Activo</option>
                                                            <option value="inactivo">Inactivo</option>
                                                        </select>

                                                    </div>

                                                    <div>
                                                        <label for="rpassword">Repetir Contraseña</label>
                                                        <input type="password"  class="form-control" id="rpassword">

                                                    </div>
                                                </div>

                                            </div>



                                            <!-- Hidden input to store the index of the user being edited -->
                                            <input type="hidden" id="editIndex">

                                            <!-- Alert for duplicate user -->
                                            <div id='alertMessage' class='mt-3'>
                                                
                                            </div>

                                            <!-- Botón para agregar usuario -->
                                            <button type='submit' class='btn btn-primary'>Agregar Usuario</button>

                                        </form>

                                        <!-- Tabla para mostrar usuarios -->
                                        <h3 class='mt-5'>Lista de Usuarios</h3>

                                        <!-- Contenedor responsivo para la tabla -->
                                        <div class='table-responsive'>
                                            <table class='table table-striped'>
                                                <thead>
                                                    <tr>
                                                        <th>Nombre</th>
                                                        <th>Apellido</th>
                                                        <th>Correo Electrónico</th>
                                                        <th>Rango</th>
                                                        <th>Rol</th>
                                                        <th>Estado</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody id='userList'>
                                             
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>



                                </div>
                            </div>
                        </div>
                    </div>
                </section>



            </main>
            <!-- Footer -->
            <!-- Footer -->
            <%- include('../partials/footer') %>



                <!-- Scripts -->
                <%- include('../partials/scripts') %>



    </body>

    </html>